<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFB6C1"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnHamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/bagach"
             />

        <ImageView
            android:layout_marginLeft="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timkiem" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workplace" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/imageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/muiten" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyview"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Random dishes"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:id="@+id/recyviewMeals"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>



